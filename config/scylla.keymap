        grave_spc: grave_spc {
            label = "ZM_grave_spc";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            tap-ms = <30>;
            bindings = <&kp GRAVE &kp SPACE>;
        };

        tilde_spc: tilde_spc {
